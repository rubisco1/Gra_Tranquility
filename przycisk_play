import pygame
pygame.init()
#wymiary okna takie jak w grze
win=pygame.display.set_mode((700,500))

class button():
    #klasa pod którą potem podstawiamy swoje wartości do stworzenia przycisku "play"
    def __init__(self, color, x,y,width,height, text=''):
        self.color = color
        self.x = x
        self.y = y
        self.width = width
        self.height = height
        self.text = text

    def draw(self,win,outline=None):
        # metoda do rysowania przycisku na ekranie
        if outline:
            pygame.draw.rect(win, outline, (self.x-2,self.y-2,self.width+4,self.height+4),0)

        pygame.draw.rect(win, self.color, (self.x,self.y,self.width,self.height),0)

        if self.text != '':
            font = pygame.font.SysFont('comicsans', 60)
            text = font.render(self.text, 1, (0,0,0))
            win.blit(text, (self.x + (self.width/2 - text.get_width()/2), self.y + (self.height/2 - text.get_height()/2)))

    def isOver(self, pos):
        #pozycja myszki
        if pos[0] > self.x and pos[0] < self.x + self.width:
            if pos[1] > self.y and pos[1] < self.y + self.height:
                return True

        return False

def redrawWindow():
    win.fill((255,255,255))
    button.draw(win, (0,0,0))

run = True
#nasze wartości do przycisku
button=button((0,255,0), 210, 170, 250, 100, "Play")

while run:
    redrawWindow()
    pygame.display.update()

    for event in pygame.event.get():
        pos = pygame.mouse.get_pos()

        if event.type== pygame.QUIT:
            run=False
            pygame.quit()
            quit()
        if event.type==pygame.MOUSEBUTTONDOWN:
            if button.isOver(pos):
                print("Play")

        if event.type==pygame.MOUSEMOTION:
            if button.isOver(pos):
                #zmiany kolorów
                button.color = (0,0,255)
            else:
                #zmiany kolorów po najechaniu
                button.color = (0,100,200)

pygame.display.flip()
